.drop-down-refresh {
    position: relative;
}

.refresh-status {
    position: absolute;
    left: 0;
    right: 0;
    top: -112rpx;
    display: flex;
    height: 112rpx;
    line-height: 112rpx;
    align-items: center;
    justify-content: center;
}

.refresh-down-up {
    color: rgb(170, 184, 194);
}

.refresh-status .refresh-loding {
    width: 52rpx;
    height: 52rpx;
    animation-name: loading;
    animation-duration: 0.7s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
}

@keyframes loading {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
